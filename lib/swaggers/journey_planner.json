{
  "openapi": "3.0.3",
  "info": {
    "title": "Journey Planner",
    "version": "0.0.1",
    "contact": {
      "url": "http://journeyplanner.silverrailtech.com/JourneyPlanner/Help"
    }
  },
  "paths": {
    "/DataSets/{dataset}/StopTimetable": {
      "get": {
        "operationId": "getStopTimetable",
        "parameters": [
          {
            "name": "dataset",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "StopUID",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Time",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "ReturnNotes",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "IsRealTimeChecked",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "format",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Format"
            },
            "in": "query"
          }
        ],
        "responses": {
          "default": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StopTimetableResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKey": []
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "in": "query",
        "name": "API-Key"
      }
    },
    "schemas": {
      "StopTimetableResponse": {
        "type": "object",
        "required": [
          "Status"
        ],
        "properties": {
          "Status": {
            "$ref": "#/components/schemas/StatusResponse"
          },
          "Trips": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Trip"
            }
          },
          "RequestedStop": {
            "$ref": "#/components/schemas/Stop"
          }
        }
      },
      "Stop": {
        "type": "object",
        "required": [
          "Description"
        ],
        "properties": {
          "Description": {
            "type": "string"
          }
        }
      },
      "Trip": {
        "type": "object",
        "required": [
          "RealTimeInfo",
          "Summary"
        ],
        "properties": {
          "Summary": {
            "$ref": "#/components/schemas/TripSummary"
          },
          "RealTimeInfo": {
            "$ref": "#/components/schemas/RealTimeInfo"
          }
        }
      },
      "TripSummary": {
        "type": "object",
        "required": [
          "Headsign",
          "RouteCode"
        ],
        "properties": {
          "Headsign": {
            "type": "string"
          },
          "RouteCode": {
            "type": "string"
          }
        }
      },
      "RealTimeInfo": {
        "type": "object",
        "properties": {
          "estimatedArrivalTime": {
            "type": "string",
            "format": "time"
          },
          "actualArrivalTime": {
            "type": "string",
            "format": "time"
          }
        }
      },
      "StatusResponse": {
        "type": "object",
        "properties": {
          "Severity": {
            "type": "number"
          }
        }
      },
      "Format": {
        "type": "string",
        "enum": [
          "json",
          "xml"
        ]
      }
    }
  }
}